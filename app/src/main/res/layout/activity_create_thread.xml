<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_bg"
    tools:context=".CreateThread">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cntTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_a_nnew_thread"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="27dp"
            android:layout_marginStart="26dp"/>

        <TextView
            android:id="@+id/tTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/thread_name"
            android:textColor="@color/purple_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cntTitle"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/threadSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:fontFamily="@font/roboto_regular"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tTitle"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="7dp"/>

        <EditText
            android:id="@+id/threadName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Biology"
            app:layout_constrainedWidth="true"
            android:layout_marginEnd="26dp"
            android:background="@null"
            android:textColorHint="@color/purple_dark"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/threadSymbol"
            app:layout_constraintTop_toBottomOf="@+id/tTitle"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="5dp"/>

        <View
            android:id="@+id/lineDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="26dp"
            android:background="@color/purple_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/threadName"
            app:layout_constraintVertical_bias="0.00"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/devNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/when_this_thread_is_closed_there_will_be_a_mock_quiz_for_every_member_of_this_thread_n_n_only_members_who_have_competitive_mode_turned_on_are_able_to_join_the_mock_quiz"
            android:textColor="@color/purple_light"
            android:textSize="12sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineDivider"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="22dp"/>

        <TextView
            android:id="@+id/orNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/or"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devNote"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="34dp"/>

        <TextView
            android:id="@+id/jatNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/join_a_thread"
            android:textColor="@color/purple_light"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/orNote"
            app:layout_constraintTop_toBottomOf="@+id/devNote"
            app:layout_constraintVertical_bias="0" />

        <TextView
            android:id="@+id/iNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/instead"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constrainedWidth="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@+id/jatNote"
            app:layout_constraintTop_toBottomOf="@+id/devNote"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/save_cancel"/>

</RelativeLayout>