<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rekindle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryDark">@color/purple_bg</item>
        <item name="colorAccent">@color/purple_light</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="backgroundColor">@color/purple_bg</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/purple_bg</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Rekindle.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Rekindle.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Rekindle.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>